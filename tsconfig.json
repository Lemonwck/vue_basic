{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
    },
    // "paths": {
    //   "@/*": ["src/*"],
    //   "src/*": ["src/*"],
    //   "app/*": ["*"],
    //   "components/*": ["src/components/*"],
    //   "layouts/*": ["src/layouts/*"],
    //   "pages/*": ["src/pages/*"],
    //   "assets/*": ["src/assets/*"],
    //   "boot/*": ["src/boot/*"],
    //   "stores/*": ["src/stores/*"]
    // },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}